@model GDB.Models.Game

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating) out of 10
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating) /10
        </dd>
        <dt class="col-sm-2">
            Review
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GReview)
        </dd>
        <td>
            <img src="@Html.DisplayFor(model =>model.image)" />
        </td>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
